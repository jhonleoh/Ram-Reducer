{
  "name": "ram-optimizer",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron .",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chart.js": "^4.4.2",
    "electron-log": "^5.1.1",
    "electron-packager": "^17.1.2",
    "node-os-utils": "^1.3.7",
    "sharp": "^0.34.1",
    "systeminformation": "^5.22.6"
  },
  "main": "main.js",
  "build": {
    "appId": "com.ramoptimizer.app",
    "productName": "RAM Optimizer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  },
  "author": {
    "name": "RAM Optimizer Developer",
    "email": "dev@example.com"
  },
  "description": "A powerful utility to optimize and free up RAM on your system"
}